#!/usr/bin/perl

$| = 1;

use strict;
use warnings;

use FindBin;
use lib "$FindBin::RealBin/../libs";

use POSIX ('strftime');

use Amling::Git::Utils;

my $root = Amling::Git::Utils::find_root();
my $time = strftime('%Y%m%d-%H%M%S', localtime(time()));

if(@ARGV)
{
    # so rage...
    {
        open(my $fh, '-|', 'git', 'symbolic-ref', '-q', 'HEAD') || die "Could not open git symbolic-ref -q HEAD: $!";
        my @l;
        while(my $l = <$fh>)
        {
            chomp $l;
            push @l, $l;
        }
        if(close($fh))
        {
            die unless(@l == 1);
            my $head = $l[0];
            if(grep { "refs/heads/$_" eq $head } (@ARGV))
            {
                run('git', 'checkout', 'HEAD~0');
            }
        }
        else
        {
            die if(@l);
        }
    }

    run('git', 'push', "$root/.git/archive-repo", (map { "$_:$time--$_" } @ARGV));
    run('git', 'branch', '-D', @ARGV);
}

sub run
{
    my @cmd = @_;
    my $cmd = join(' ', @cmd);
    print "Running: $cmd...\n";
    (system(@cmd) == 0) || die "Could not system $cmd: $!";
}
