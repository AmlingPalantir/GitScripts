#!/usr/bin/perl

$| = 1;

use strict;
use warnings;

my @args;
{
    open(my $fh, "-|", "git-judge-branches") || die;
    while(my $line = <$fh>)
    {
        chomp $line;

        if($line =~ /^(.*): (.*)$/)
        {
            my ($branch, $judgement) = ($1, $2);

            if($judgement eq "POSITIVE")
            {
                push @args, $branch;
            }
            if($judgement eq "NEGATIVE")
            {
                push @args, "$branch..$branch";
            }
        }
    }
    close($fh) || die;
}

exec("gitk", @args, @ARGV);
